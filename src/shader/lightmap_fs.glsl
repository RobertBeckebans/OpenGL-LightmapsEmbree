// ------------------------------------------------------------------
// INPUT VARIABLES  -------------------------------------------------
// ------------------------------------------------------------------

in vec3 FS_IN_Position;
in vec3 FS_IN_Normal;

// ------------------------------------------------------------------
// OUTPUT VARIABLES  ------------------------------------------------
// ------------------------------------------------------------------

layout(location = 0) out vec3 FS_OUT_Position;
layout(location = 1) out vec3 FS_OUT_Normal;

// ------------------------------------------------------------------
// MAIN  ------------------------------------------------------------
// ------------------------------------------------------------------

void main(void)
{
    FS_OUT_Position = FS_IN_Position;
    FS_OUT_Normal = normalize(FS_IN_Normal);
}

